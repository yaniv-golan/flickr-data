{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "galleries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "photo_count": { "type": "integer" },
          "view_count": { "type": "integer" },
          "photos": {
            "type": "array",
            "items": { "type": "string" },
            "description": "An array of photo IDs in the gallery."
          }
        },
        "required": ["id", "title", "photo_count", "view_count", "photos"],
        "description": "Schema for an individual gallery."
      },
      "description": "An array of galleries created by the user."
    }
  },
  "required": ["galleries"],
  "description": "Schema for the user's galleries."
}
