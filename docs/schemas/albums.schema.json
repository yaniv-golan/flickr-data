{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "albums": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "photo_count": { "type": "integer" },
          "view_count": { "type": "integer" },
          "created": { "type": "string", "format": "date-time" },
          "last_updated": { "type": "string", "format": "date-time" },
          "cover_photo": { "type": "string" },
          "photos": {
            "type": "array",
            "items": { "type": "string" },
            "description": "An array of photo IDs in the album."
          }
        },
        "required": ["id", "title", "photo_count", "view_count", "created", "last_updated", "photos"],
        "description": "Schema for an individual album."
      },
      "description": "An array of albums belonging to the user."
    }
  },
  "required": ["albums"],
  "description": "Schema for the user's albums."
}
