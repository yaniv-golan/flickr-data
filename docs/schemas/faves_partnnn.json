{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "favorites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "photo_id": { 
            "type": "string",
            "description": "The unique identifier of the favorite photo."
          },
          "photo_url": { 
            "type": "string", 
            "format": "uri",
            "description": "The URL to the favorite photo on Flickr."
          }
        },
        "required": ["photo_id", "photo_url"],
        "description": "Schema for a favorite photo."
      },
      "description": "An array of favorite photos."
    }
  },
  "required": ["favorites"],
  "description": "Schema for the user's favorite photos."
}
