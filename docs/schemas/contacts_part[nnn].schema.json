{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "contacts": {
      "type": "object",
      "patternProperties": {
        ".*": { 
          "type": "string", 
          "format": "uri",
          "description": "The URL to a contact's Flickr profile."
        }
      },
      "additionalProperties": false,
      "description": "A mapping of contact names to their Flickr profile URLs."
    }
  },
  "required": ["contacts"],
  "description": "Schema for the user's contacts."
}
